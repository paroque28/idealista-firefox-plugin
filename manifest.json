{
  "manifest_version": 2,
  "name": "Idealista AI Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for finding flats on Idealista using Claude",
  "browser_specific_settings": {
    "gecko": {
      "id": "idealista-ai-assistant@example.com",
      "strict_min_version": "78.0"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "*://www.idealista.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.idealista.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Idealista Helper",
    "default_popup": "popup.html"
  }
}
