{
  "manifest_version": 2,
  "name": "Idealista Helper",
  "version": "1.0.0",
  "description": "Firefox plugin to enhance Idealista navigation with additional filters, AI-powered features, and red flag detection",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "*://www.idealista.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.idealista.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Idealista Helper",
    "default_popup": "popup.html"
  }
}
