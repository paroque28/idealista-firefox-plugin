{
  "manifest_version": 3,
  "name": "Idealista AI Assistant",
  "version": "1.0.0",
  "description": "AI-powered assistant for finding flats on Idealista using Claude",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-96.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://www.idealista.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.idealista.com/*"],
      "js": ["browser-polyfill.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background-chrome.js"
  },
  "action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Idealista AI Assistant",
    "default_popup": "popup.html"
  }
}
